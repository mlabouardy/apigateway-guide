{
    "Version": "2012–10–17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "dynamodb:PutItem",
                "dynamodb:GetItem",
                "dynamodb:DeleteItem",
                "dynamodb:Scan",
                "dynamodb:Query"
            ],
            "Resource": [
                "arn:aws:dynamodb:eu-west-3:*:table/movies",
                "arn:aws:dynamodb:eu-west-3:*:table/movies/index/*"
            ]
        }
    ]
}